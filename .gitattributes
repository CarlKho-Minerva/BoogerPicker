# Auto detect text files and perform LF normalization
* text=auto

# Unity YAML files (Scene, Prefab, Mat, Meta) - treat as text and mergeable
*.unity merge=unityyamlmerge eol=lf
*.prefab merge=unityyamlmerge eol=lf
*.mat merge=unityyamlmerge eol=lf
*.meta merge=unityyamlmerge eol=lf

# Graphics - treat as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.tga binary
*.tif binary
*.tiff binary
*.psd binary
*.bmp binary
*.exr binary
*.hdr binary
*.iff binary
*.pict binary
*.svg binary

# Audio - treat as binary
*.wav binary
*.mp3 binary
*.ogg binary
*.aif binary
*.aiff binary
*.xm binary
*.mod binary
*.it binary
*.s3m binary

# Video - treat as binary
*.mov binary
*.avi binary
*.asf binary
*.mpg binary
*.mpeg binary
*.mp4 binary

# 3D models - treat as binary
*.fbx binary
*.obj binary
*.max binary
*.blend binary
*.dae binary
*.mb binary
*.ma binary
*.3ds binary
*.dxf binary
*.c4d binary
*.lwo binary
*.lws binary

# Executables, Plugins, Libraries - treat as binary
*.dll binary
*.so binary
*.dylib binary
*.exe binary
*.jar binary
*.aar binary
*.app binary
*.abcdef binary
